<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>

    <material name="silver">
      <color rgba="0.75 0.75 0.75 1"/>
    </material>

    <material name="brown">
        <color rgba="0.6 0.4 0.2 1"/>
    </material>

    <material name="green">
         <color rgba="0 1 0 1"/>
    </material>


    <!-- BASE LINK -->

    <link name="base_link">

    </link>


    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.077 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.2 0 -0.04" rpy="0 0 3.14"/>
            <geometry>
              <mesh filename="file://$(find arms_bot)/meshes/chassis.stl" scale="1.0 1.0 1.0"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.2 0 -0.04" rpy="0 0 3.14"/>
            <geometry>
              <mesh filename="file://$(find arms_bot)/meshes/chassis.stl" scale="1.0 1.0 1.0"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="2.0" x="0.4" y="0.25" z="0.2">
            <origin xyz="0.2 0 -0.04" rpy="0 0 3.14"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

    
    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.105 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.026"/>
            </geometry>
            <material name="yellow"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.026"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.216" length="0.026" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Yellow</material>
    </gazebo>

    <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.105 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.026"/>
            </geometry>
            <material name="yellow"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.026"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.216" length="0.026" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Yellow</material>
    </gazebo>

    <!-- CASTER WHEEL LINK -->

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.317 0 -0.035"/>
    </joint>


    <link name="caster_wheel">
        <visual>
            <geometry>
              <mesh filename="file://$(find arms_bot)/meshes/caster_wheel.stl" scale="1.0 1.0 1.0"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <mesh filename="file://$(find arms_bot)/meshes/caster_wheel.stl" scale="1.0 1.0 1.0"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.04" radius="0.016">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <!-- ACTUATOR_BODY LINK -->

    <joint name="actuator_body_joint" type="fixed">
        <parent link="chassis"/>
        <child link="actuator_body"/>
        <origin xyz="0.28 0 0.01" rpy="0 0 0"/>
    </joint>


    <link name="actuator_body">
        <visual>
            <origin xyz="0.0075 0 0" rpy="-1.571 0 3.14"/>
            <geometry>
              <mesh filename="file://$(find arms_bot)/meshes/actuator_body.stl" scale="1.0 1.0 1.0"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0075 0.0" rpy="-1.571 0 3.14"/>
            <geometry>
                <mesh filename="file://$(find arms_bot)/meshes/actuator_body.stl" scale="1.0 1.0 1.0"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.7" length="0.30" radius="0.01">
            <origin xyz="0.0075 0 0" rpy="-1.571 0 3.14"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="actuator_body">
        <material>Gazebo/Black</material>
    </gazebo>

        <!-- ACTUATOR_ROD LINK -->

    <joint name="actuator_rod_joint" type="prismatic">
        <parent link="actuator_body"/>
        <child link="actuator_rod"/>
        <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="0.0" upper="0.2" effort="1500" velocity="0.007"/>
    </joint>


    <link name="actuator_rod">
        <visual>
            <origin xyz="0 0 0.30" rpy=" -1.5708 0 0"/>
            <geometry>
              <mesh filename="file://$(find arms_bot)/meshes/actuator_rod.stl" scale="1.0 1.0 1.0"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.30" rpy=" -1.5708 0 0"/>
            <geometry>
                <mesh filename="file://$(find arms_bot)/meshes/actuator_rod.stl" scale="1.0 1.0 1.0"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.3" length="0.25" radius="0.01">
            <origin xyz="0 0 0.30" rpy=" -1.5708 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="actuator_rod">
        <material>Gazebo/Silver</material>
    </gazebo>


       <!-- FORKLIFT LINK -->

    <joint name="forklift_joint" type="fixed">
        <parent link="actuator_rod"/>
        <child link="forklift"/>
        <origin xyz="0.014 0 0.273" rpy="0 0 0"/>
    </joint>


    <link name="forklift">
        <visual>
            <origin xyz="0 0 0" rpy=" 0 0 1.5708"/>
            <geometry>
              <mesh filename="file://$(find arms_bot)/meshes/forklift.stl" scale="1.0 1.0 1.0"/>
            </geometry>
            <material name="brown"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy=" 0 0 1.5708"/>
            <geometry>
                <mesh filename="file://$(find arms_bot)/meshes/forklift.stl" scale="1.0 1.0 1.0"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.1" x="0.105" y="0.09" z="0.06">
            <origin xyz="0 0 0" rpy=" 0 0 1.5708"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="forklift">
        <material>Gazebo/Orange</material>
    </gazebo>




    
    
</robot>